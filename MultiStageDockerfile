# syntax=docker/dockerfile:1

FROM openjdk:8-jdk-alpine as base

WORKDIR /app

COPY .mvn/ .mvn
COPY mvnw pom.xml ./
RUN ./mvnw dependency:go-offline
COPY src ./src

FROM base as test
CMD ["./mvnw", "test"]

FROM base as development
CMD ["./mvnw", "spring-boot:run", "-Dspring-boot.run.profiles=default", "-Dspring-boot.run.jvmArguments='-agentlib:jdwp=transport=dt_socket,server=y,suspend=n,address=*:8000'"]

FROM base as build
RUN ./mvnw package

FROM base as production
EXPOSE 8080

COPY --from=build /app/target/design-patterns-*.jar /design-patterns.jar

CMD ["java", "-Djava.security.egd=file:/dev/./urandom", "-jar", "/design-patterns.jar"]